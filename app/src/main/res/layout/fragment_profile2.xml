<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile2"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/colorBlack"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:id="@+id/title_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textSize="40sp"
        android:fontFamily="@font/ubuntu_bold"
        android:textColor="@android:color/white"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginTop="-50dp"
        android:text="Back"
        android:textColor="@android:color/white"
        android:background="@color/colorBlack"
        android:fontFamily="@font/ubuntu_condensed_regular"/>




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:fontFamily="@font/ubuntu_medium_italic"
            android:textColorHint="@android:color/white"
            android:hint="Name"
            android:inputType="text" />



    <EditText
        android:id="@+id/edit_day"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:hint="dd"
        android:inputType="number"
        android:layout_gravity="left"
        android:textColor="@android:color/white"
        android:fontFamily="@font/ubuntu_medium_italic"
        android:textColorHint="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:layout_marginLeft="-120dp"
            android:textColor="@android:color/white"
            android:text="/"/>

        <EditText
            android:id="@+id/edit_month"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:hint="mm"
            android:inputType="number"
            android:layout_marginTop="-35dp"
            android:layout_marginLeft="-90dp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/ubuntu_medium_italic"
            android:textColorHint="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:layout_marginLeft="-70dp"
            android:textColor="@android:color/white"
            android:text="/"/>

        <EditText
            android:id="@+id/edit_year"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:hint="yyyy"
            android:layout_marginTop="-35dp"
            android:inputType="number"
            android:layout_marginLeft="-40dp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/ubuntu_medium_italic"
            android:textColorHint="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:layout_marginLeft="-70dp"
            android:textColor="@android:color/white"
            android:text="/"/>

        <EditText
            android:id="@+id/edit_age_calc"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="D.O.B"
            android:ems="10"
            android:inputType="date"
            android:textColor="@android:color/white"
            android:fontFamily="@font/ubuntu_medium_italic"
            android:textColorHint="@android:color/white"/>

    <EditText
        android:id="@+id/edit_height"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-115dp"
        android:hint="ft"
        android:inputType="numberDecimal"
        android:textColor="@android:color/white"
        android:fontFamily="@font/ubuntu_medium_italic"
        android:textColorHint="@android:color/white"/>

        <EditText
            android:id="@+id/edit_height_2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-40dp"
            android:fontFamily="@font/ubuntu_medium_italic"
            android:hint="in"
            android:inputType="numberDecimal"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />

    <EditText
        android:id="@+id/edit_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="kg"
        android:inputType="numberDecimal"
        android:textColor="@android:color/white"
        android:fontFamily="@font/ubuntu_medium_italic"
        android:textColorHint="@android:color/white"/>

    <EditText
        android:id="@+id/edit_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Team"
        android:inputType="text"
        android:textColor="@android:color/white"
        android:fontFamily="@font/ubuntu_medium_italic"
        android:textColorHint="@android:color/white"/>

    <EditText
        android:id="@+id/edit_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:hint="Position"
        android:inputType="text"
        android:textColor="@android:color/white"
        android:fontFamily="@font/ubuntu_medium_italic"
        android:textColorHint="@android:color/white"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/t_Weight"
        android:text="Target Weight"
        android:textColor="@android:color/white"
        android:fontFamily="@font/ubuntu_medium"
        android:textColorHint="@android:color/white"
        android:background="@drawable/rounded_button"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/enter_target_weight"
        android:hint="Target Weight (KG)"
        android:inputType="numberDecimal"
        android:textColor="@android:color/white"
        android:fontFamily="@font/ubuntu_medium_italic"
        android:textColorHint="@android:color/white"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Save Target Weight"
        android:id="@+id/save_target_weight"
        android:textColor="@android:color/white"
        android:fontFamily="@font/ubuntu_medium"
        android:background="@drawable/rounded_button"
        android:textColorHint="@android:color/white"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="save"
        android:id="@+id/save"
        android:textColor="@android:color/white"
        android:fontFamily="@font/ubuntu_medium_italic"
        android:textColorHint="@android:color/white"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_button"/>
    </LinearLayout>



</LinearLayout>



