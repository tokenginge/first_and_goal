<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:id="@+id/profile">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:textSize="50sp"
        android:fontFamily="@font/ubuntu_bold"
        android:text="Profile"
        android:textColor="@android:color/white"/>


    <Button
        android:id="@+id/btn_Edit"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="320dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorBlack"
        android:textColor="@android:color/white"
        android:text="Edit"
        android:textSize="20sp"
        android:fontFamily="@font/ubuntu_condensed_regular"/>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="470dp"
        android:layout_marginTop="80dp"
        android:padding="8dp"
        android:background="@android:color/darker_gray"
        android:layout_gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:text="Name:"
        android:textSize="30sp"
        android:fontFamily="@font/ubuntu_medium" />

        <TextView
            android:id="@+id/prof_name"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:fontFamily="@font/ubuntu_medium_italic"
            android:layout_marginStart="130dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="80dp"
            android:fontFamily="@font/ubuntu_medium"
            android:text="Age:"
            android:textColor="@color/colorBlack"
            android:textSize="30sp" />

    <TextView
        android:id="@+id/prof_age"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="90dp"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/ubuntu_medium_italic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height:"
        android:textSize="30sp"
        android:fontFamily="@font/ubuntu_medium"
        android:layout_marginTop="160dp"
        android:textColor="@color/colorBlack"
        />

    <TextView
        android:id="@+id/prof_height"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="170dp"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:fontFamily="@font/ubuntu_medium_italic"/>

    <TextView
        android:id="@+id/weight_dif"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="340dp"
        android:layout_marginStart="190dp"
        android:layout_marginLeft="190dp"
        android:visibility="invisible"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:fontFamily="@font/twenty"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight:"
        android:textSize="30sp"
        android:fontFamily="@font/ubuntu_medium"
        android:layout_marginTop="240dp"
        android:textColor="@color/colorBlack"
        />

    <TextView
        android:id="@+id/prof_weight"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="250dp"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:fontFamily="@font/ubuntu_medium_italic"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team:"
        android:textColor="@color/colorBlack"
        android:textSize="30sp"
        android:fontFamily="@font/ubuntu_medium"
        android:layout_marginTop="320dp"
       />

    <TextView
        android:id="@+id/prof_team"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="330dp"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:fontFamily="@font/ubuntu_medium_italic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position:"
        android:textSize="30sp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/ubuntu_medium"
        android:layout_marginTop="400dp" />

    <TextView
        android:id="@+id/prof_pos"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="410dp"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/ubuntu_medium_italic"/>

    </RelativeLayout>

</FrameLayout>