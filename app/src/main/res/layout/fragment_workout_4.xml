<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorBlack"
    android:id="@+id/coordinator"
    android:paddingBottom="6dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/colorBlack">

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@color/colorBlack"
            android:text="Back"
            android:fontFamily="@font/ubuntu_condensed_regular"
            android:textColor="@android:color/white"
            android:id="@+id/btn_back"
            />

        <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="310dp"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="17dp"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="Workout 4"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/ubuntu_bold"
            android:id="@+id/workout1"/>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/addWorkout"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:layout_marginTop="450dp"
            android:layout_marginLeft="300dp"
            android:src="@drawable/ic_add"
            android:layout_marginStart="300dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/workout_recycler"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="50dp"
            android:scrollbars="horizontal" />

        <Button
            android:id="@+id/btn_start"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/rounded_button"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_centerHorizontal="true"
            android:text="Start"
            android:fontFamily="@font/ubuntu_condensed_regular"
            android:textColor="@android:color/white"
            android:textSize="30sp"/>


        <Button
            android:id="@+id/btn_pause"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/rounded_button"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:text="Pause"
            android:visibility="gone"
            android:fontFamily="@font/ubuntu_condensed_regular"
            android:textColor="@android:color/white"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/btn_pause"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="193dp"
            android:layout_marginLeft="193dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/ubuntu_condensed_regular"
            android:text="Save"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:layout_toEndOf="@+id/btn_pause" />








    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
